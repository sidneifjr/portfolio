---
import astro from '../images/intro/astro.svg'
import cypress from '../images/intro/cypress.svg'
import next from '../images/intro/nextjs.svg'
import node from '../images/intro/node.svg'
import react from '../images/intro/react.svg'
import typescript from '../images/intro/typescript.svg'

import { Image } from 'astro:assets'

const skills = [
  {
    image: react,
    name: 'React',
  },
  {
    image: next,
    name: 'Next.js',
  },
  {
    image: typescript,
    name: 'TypeScript',
  },
  {
    image: astro,
    name: 'Astro',
  },
  {
    image: node,
    name: 'Node.js',
  },
  {
    image: cypress,
    name: 'Cypress',
  },
]
---

<ul class="w-full pt-8 pb-12 flex gap-y-6 sm:gap-y-0 sm:gap-12 flex-wrap">
  {
    skills.map((skill) => (
      <li class="basis-[33%] font-secondary text-white flex flex-col justify-center items-center gap-3 sm:flex-1">
        <Image
          width={56}
          height={56}
          class="h-10 w-10 sm:h-14 sm:w-14"
          src={skill.image}
          alt={skill.name}
          quality={80}
        />

        <span class="font-medium">{skill.name}</span>
      </li>
    ))
  }
</ul>
